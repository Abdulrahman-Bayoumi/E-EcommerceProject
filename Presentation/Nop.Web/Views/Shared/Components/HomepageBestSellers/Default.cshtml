@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
    <section class="product-grid bestsellers mb-5">
        <div class="container">
            <div class="row mb-4">
                <div class="col-12">
                    <h2 class="text-center" style="font-size: 28px; font-weight: 600; color: #333; margin-bottom: 30px;">
                        <i class="fas fa-fire mr-2 text-danger"></i>@T("Bestsellers")
                    </h2>
                </div>
            </div>
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-6 col-md-4 col-lg-3 mb-4">
                        <div class="item-box">
                            @await Html.PartialAsync("_ProductBox", item)
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}